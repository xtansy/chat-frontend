{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        // "baseUrl": "./src",
        "paths": {
            "@store": [
                "./src/redux"
            ],
            "@utils/constants": [
                "./src/utils/constants"
            ],
            "@utils/api/hooks": [
                "./src/utils/api/hooks"
            ],
            "@utils/api/requests/auth": [
                "./src/utils/api/requests/auth"
            ],
            "@utils/api/requests/user": [
                "./src/utils/api/requests/user"
            ],
            "@utils/api/requests/dialog": [
                "./src/utils/api/requests/dialog"
            ],
            "@pages": [
                "./src/Pages"
            ],
            "@common": [
                "./src/common"
            ],
            "@redux/userSlice": [
                "./src/redux/userSlice"
            ],
            "@redux/dialogSlice": [
                "./src/redux/dialogSlice"
            ],
            "@redux/userSlice/selectors": [
                "./src/redux/userSlice/selectors"
            ],
            "@redux/dialogSlice/selectors": [
                "./src/redux/dialogSlice/selectors"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}